{
  "name": "genesis-nft-blindbox",
  "version": "1.0.0",
  "description": "Genesis NFT BlindBox - A complete NFT blind box system built with Hardhat v3",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "hardhat test --verbose",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:runner": "hardhat run scripts/runTests.ts",
    "test:gem": "hardhat test test/GemToken.test.ts",
    "test:mecha": "hardhat test test/GenesisMecha.test.ts",
    "test:blindbox": "hardhat test test/BlindBox.test.ts",
    "test:integration": "hardhat test test/Integration.test.ts",
    "deploy": "hardhat ignition deploy ignition/modules/GenesisNFT.ts",
    "deploy:localhost": "hardhat ignition deploy ignition/modules/GenesisNFT.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/GenesisNFT.ts --network sepolia",
    "setup:metadata": "hardhat run scripts/setupMetadata.ts",
    "setup:metadata:localhost": "hardhat run scripts/setupMetadata.ts --network localhost",
    "setup:metadata:sepolia": "hardhat run scripts/setupMetadata.ts --network sepolia",
    "check:balance": "hardhat run scripts/checkBalance.ts --network sepolia",
    "verify:all": "hardhat run scripts/verifyContracts.ts --network sepolia",
    "verify:gemtoken": "npx hardhat verify --network sepolia 0x4204e2E0c3A05867bC9AD6a82dEF2102237bfCf5 0x705068024721768c93d3da33b48b31de477e3510",
    "verify:mecha": "npx hardhat verify --network sepolia 0x0Ce21612c95C914c5f326137f109dd45dCEA7ac5 0x705068024721768c93d3da33b48b31de477e3510 0x705068024721768c93d3da33b48b31de477e3510",
    "verify:blindbox": "npx hardhat verify --network sepolia 0x50B09DEe889E135beb4B370C3b685C0d62fa61A1 0x4204e2E0c3A05867bC9AD6a82dEF2102237bfCf5 0x0Ce21612c95C914c5f326137f109dd45dCEA7ac5 1000000 0x705068024721768c93d3da33b48b31de477e3510",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "verify": "hardhat verify --network sepolia",
    "size": "hardhat size-contracts"
  },
  "keywords": [
    "nft",
    "blindbox",
    "ethereum",
    "hardhat",
    "solidity",
    "erc20",
    "erc721",
    "defi",
    "web3"
  ],
  "author": "Genesis NFT Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@types/node": "^22.17.2",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.0",
    "typescript": "~5.8.3",
    "viem": "^2.33.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.1"
  }
}
